{
	"name": "challenge-eldorado-backend",
	"version": "1.0.0",
	"description": "Eldorado's challenge backend",
	"main": "src/server.ts",
	"repository": "https://github.com/brunorctorres/challenge-eldorado.git",
	"author": {
		"name": "Bruno Calixto",
		"email": "brunorctorres@gmail.com"
	},
	"license": "MIT",
	"dependencies": {
		"express": "^4.17.1",
		"mysql": "^2.18.1",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.2.32"
	},
	"devDependencies": {
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"@types/express": "^4.17.12",
		"@types/node": "^15.6.1",
		"@typescript-eslint/eslint-plugin": "^4.25.0",
		"@typescript-eslint/parser": "^4.25.0",
		"eslint": "^7.27.0",
		"eslint-config-prettier": "^8.3.0",
		"husky": "^6.0.0",
		"lint-staged": "^11.0.0",
		"prettier": "2.3.0",
		"ts-node": "3.3.0",
		"ts-node-dev": "^1.1.6",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.3.2"
	},
	"scripts": {
		"prepare": "husky install",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/server.ts",
		"build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
		"start": "ts-node src/server.ts",
		"typeorm": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
	},
	"lint-staged": {
		"src/**/*.ts": [
			"eslint --fix",
			"prettier --write"
		]
	}
}
